{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "noImplicitThis": true,
        "noResolve": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noImplicitUseStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "build",
        "declaration": true,
        "declarationDir": "declarations",
        "sourceMap": false
    },
    "include": [
        "src/*.ts"
    ]
}
